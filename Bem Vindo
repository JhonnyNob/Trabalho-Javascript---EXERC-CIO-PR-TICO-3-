<body>
  <div class="container">
    <h1>Bem-vindo!</h1>
    <p>Digite seu nome:</p>
    <input type="text" id="inputNome" placeholder="Seu nome">
    <button onclick="mostrarMensagem()">Clique aqui</button>
    <p id="mensagem"></p>
  </div>

  <script>
    function mostrarMensagem() {
      let inputNome = document.getElementById("inputNome");
      let nome = inputNome.value.trim();

      if (nome === "") {
        document.getElementById("mensagem").textContent = "Por favor, insira seu nome.";
      } else {
        document.getElementById("mensagem").textContent = `Olá, ${nome}! Seja bem-vindo à página do aluno(a).`;
      }
    }
  </script>
